<br><br>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Title</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody> 
      <%if user_signed_in?%>
        <% @orders.each do |order|%>
          <tr>
            <td><%=order.id%></td>
            <td><%=order.item.title%></td>
            <td><%=order.amount%></td>
          </tr>
        <%end%>
      <%end%>
    </tbody>    
  </table>
</div>
  