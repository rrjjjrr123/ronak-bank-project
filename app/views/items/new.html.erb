<br><br>
<%= form_for @item  do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <%=f.label :title %>
        <%= f.text_field :title %>      
      </div> 
      <div class="col-sm-3">       
         <%=f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="col-sm-3">       
        <%=f.label :price %>
        <%= f.text_field :price %>
      </div>
      <div class="col-sm-3">
        <%=f.label :item_image %>
        <%= f.file_field :image %>
      </div>
      <%= hidden_field_tag(:seller_id, :seller, { value: current_seller.id})%>
    </div><br>  
    <%= f.submit %>   
  </div>  
<%end%>